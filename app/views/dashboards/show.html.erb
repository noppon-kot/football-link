<div class="app-shell">
  <header class="app-header">
    <div class="app-top-nav">
      <div class="app-top-nav-left"></div>
      <div class="app-top-nav-center"></div>
      <div class="app-top-nav-right">
        <% if can_create_tournaments? %>
          <%= link_to "เพิ่มรายการแข่งขัน", new_tournament_path, class: "btn btn-sm btn-light" %>
        <% end %>
      </div>
    </div>
    <div class="app-header-title">รายการแข่งที่ฉันสร้าง</div>
  </header>

  <div class="container py-3">
    <div class="card shadow-sm mb-3">
      <div class="card-body">
        <%= form_with url: dashboard_path, method: :get, local: true do |f| %>
          <div class="row g-2 align-items-end">
            <div class="col-12 col-md-4">
              <label class="form-label">ค้นหาชื่อรายการ</label>
              <%= f.text_field :q, value: params[:q], class: "form-control form-control-sm" %>
            </div>

            <div class="col-6 col-md-2">
              <label class="form-label">ช่วงวันที่สร้าง</label>
              <%= f.select :created_period,
                    options_for_select([["ทั้งหมด", "all"], ["7 วันล่าสุด", "7_days"], ["30 วันล่าสุด", "30_days"]], params[:created_period].presence || "all"),
                    {},
                    class: "form-select form-select-sm" %>
            </div>

            <div class="col-6 col-md-2">
              <label class="form-label">สถานะรายการ</label>
              <%= f.select :status,
                    options_for_select([["ทั้งหมด", ""], ["รออนุมัติ", "pending"], ["เปิดให้ค้นหา", "active"]], params[:status]),
                    {},
                    class: "form-select form-select-sm" %>
            </div>

            <div class="col-6 col-md-2">
              <label class="form-label">จังหวัด</label>
              <% provinces = Tournament.distinct.order(:province).pluck(:province).compact %>
              <%= f.select :province,
                    options_for_select([["ทั้งหมด", ""]] + provinces.map { |p| [p, p] }, params[:province]),
                    {},
                    class: "form-select form-select-sm" %>
            </div>

            <div class="col-6 col-md-2 d-flex justify-content-end">
              <div class="w-100">
                <label class="form-label">&nbsp;</label>
                <%= f.submit "กรองผล", class: "btn btn-primary btn-sm w-100" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <% if @tournaments.any? %>
      <div class="row g-3">
        <% @tournaments.each do |t| %>
          <% bg_class = begin
               age = t.age_category.to_s
               if age =~ /\AU(\d+)\z/ && $1.to_i < 20
                 "tournament-card--bg1"
               else
                 "tournament-card--bg2"
               end
             end %>

          <div class="col-12 col-md-6">
            <div class="tournament-card-compact">
              <div class="tournament-card-compact-image <%= bg_class %>"></div>
              <div class="tournament-card-compact-body">
                <div class="tournament-title">
                  <%= link_to t.title, tournament_path(t), style: "color: inherit; text-decoration: none;" %>
                </div>
                <div class="tournament-meta">
                  <div>
                    <% status_text, status_class = if t.pending?
                                                    ["รออนุมัติ (ยังไม่แสดงในหน้าค้นหา)", "team-status-badge team-status-badge--applied"]
                                                  elsif t.respond_to?(:expired?) && t.expired?
                                                    ["หมดอายุ", "team-status-badge"]
                                                  else
                                                    ["เปิดให้ค้นหา", "team-status-badge team-status-badge--confirmed"]
                                                  end %>
                    <span class="<%= status_class %>"><%= status_text %></span>
                    <% if t.competition_date.present? %>
                      <span style="font-size:11px;color:#78909c;margin-left:6px;">แข่งวันที่ <%= t.competition_date.strftime("%Y-%m-%d") %></span>
                    <% end %>
                  </div>
                  <div>สนาม: <%= t.location_name %> · <%= t.city %>, <%= t.province %></div>
                  <div>
                    ทีมสมัครทั้งหมด: <%= t.team_registrations.count %>
                    · รอพิจารณา: <%= t.team_registrations.interested.count %>
                    · สมัครแล้ว: <%= t.team_registrations.applied.count %>
                    · ยืนยันแล้ว/จ่ายแล้ว: <%= t.team_registrations.confirmed.count + t.team_registrations.paid.count %>
                  </div>
                  <div>
                    อัปเดตล่าสุด: <%= (t.updated_at || t.created_at).strftime("%Y-%m-%d %H:%M") %>
                  </div>
                </div>
                <div class="tournament-card-compact-actions">
                  <% if can_edit_tournament?(t) %>
                    <%= link_to "แก้ไข", edit_tournament_path(t), class: "btn btn-sm btn-outline-primary" %>
                  <% end %>

                  <% if admin? %>
                    <% if t.pending? %>
                      <%= button_to "อนุมัติให้ค้นหาได้",
                                    approve_tournament_path(t, status: :active),
                                    method: :patch,
                                    class: "btn btn-sm btn-success",
                                    form_class: "inline-form" %>
                    <% else %>
                      <%= button_to "เปลี่ยนเป็นรออนุมัติ",
                                    approve_tournament_path(t, status: :pending),
                                    method: :patch,
                                    class: "btn btn-sm btn-outline-secondary",
                                    form_class: "inline-form" %>
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="alert alert-info" role="alert">ตอนนี้ยังไม่มีรายการแข่งในแดชบอร์ดของคุณ</div>
    <% end %>
  </div>
</div>
