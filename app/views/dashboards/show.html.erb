<div class="app-shell">
  <header class="app-header">
    <div class="app-top-nav">
      <div class="app-top-nav-left"></div>
      <div class="app-top-nav-center"></div>
      <div class="app-top-nav-right"></div>
    </div>
    <div class="app-header-title">รายการแข่งที่ฉันสร้าง</div>
  </header>

  <div class="container py-3">
    <div class="card shadow-sm mb-3">
      <div class="card-body">
        <%= form_with url: mytournaments_path, method: :get, local: true do |f| %>
          <div class="row g-2 align-items-end">
            <div class="col-12 col-md-4">
              <label class="form-label">ค้นหาชื่อรายการ</label>
              <%= f.text_field :q, value: params[:q], class: "form-control form-control-sm" %>
            </div>

            <div class="col-6 col-md-2">
              <label class="form-label">ช่วงวันที่สร้าง</label>
              <%= f.select :created_period,
                    options_for_select([["ทั้งหมด", "all"], ["7 วันล่าสุด", "7_days"], ["30 วันล่าสุด", "30_days"]], params[:created_period].presence || "all"),
                    {},
                    class: "form-select form-select-sm" %>
            </div>

            <div class="col-6 col-md-2">
              <label class="form-label">สถานะรายการ</label>
              <%= f.select :status,
                    options_for_select([["ทั้งหมด", ""], ["รออนุมัติ", "pending"], ["เปิดให้ค้นหา", "active"]], params[:status]),
                    {},
                    class: "form-select form-select-sm" %>
            </div>

            <div class="col-6 col-md-2">
              <label class="form-label">จังหวัด</label>
              <% provinces = Tournament.distinct.order(:province).pluck(:province).compact %>
              <%= f.select :province,
                    options_for_select([["ทั้งหมด", ""]] + provinces.map { |p| [p, p] }, params[:province]),
                    {},
                    class: "form-select form-select-sm" %>
            </div>

            <div class="col-6 col-md-2 d-flex justify-content-end">
              <div class="w-100">
                <label class="form-label">&nbsp;</label>
                <%= f.submit "กรองผล", class: "btn btn-primary btn-sm w-100" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <div class="row mb-2 align-items-center">
      <div class="col-auto">
        <span class="badge bg-secondary">รายการแข่งที่ฉันสร้าง</span>
      </div>
      <div class="col text-end">
        <% if can_create_tournaments? %>
          <%= link_to "เพิ่มรายการแข่งขัน", new_tournament_path, class: "btn btn-sm", style: "background:#4caf50;color:#ffffff;border-color:#43a047;" %>
        <% end %>
      </div>
    </div>

    <% if @tournaments.any? %>
      <div class="card shadow-sm">
        <div class="card-body p-2 p-md-3">
          <div class="table-responsive">
            <table class="table table-sm align-middle mb-0">
              <thead>
                <tr>
                  <th scope="col" style="width:4rem;">ลำดับ</th>
                  <th scope="col">ชื่อการแข่งขัน</th>
                  <th scope="col">สถานะ</th>
                  <th scope="col">ทีมสมัคร</th>
                  <th scope="col">อัปเดตล่าสุด</th>
                  <th scope="col" class="text-end">จัดการ</th>
                </tr>
              </thead>
              <tbody>
                <% @tournaments.each_with_index do |t, index| %>
                  <tr>
                    <td class="text-muted"><%= index + 1 %></td>
                    <td>
                      <div class="fw-semibold">
                        <%= link_to t.title, tournament_path(t), style: "color: inherit; text-decoration: none;" %>
                      </div>
                      <div class="small text-muted">
                        <% if t.competition_date.present? %>
                          แข่งวันที่ <%= t.competition_date.strftime("%Y-%m-%d") %>
                        <% else %>
                          ยังไม่กำหนดวันที่แข่ง
                        <% end %>
                      </div>
                      <div class="small text-muted">
                        สนาม: <%= t.location_name %> · <%= t.city %>, <%= t.province %>
                      </div>
                    </td>
                    <td class="small">
                      <% status_text, status_class = if t.pending?
                                                      ["รออนุมัติ", "team-status-badge team-status-badge--applied"]
                                                    elsif t.respond_to?(:expired?) && t.expired?
                                                      ["หมดอายุ", "team-status-badge"]
                                                    else
                                                      ["เปิดให้ค้นหา", "team-status-badge team-status-badge--confirmed"]
                                                    end %>
                      <span class="<%= status_class %>"><%= status_text %></span>
                    </td>
                    <td class="small">
                      รวม: <%= t.team_registrations.count %><br>
                      รอพิจารณา: <%= t.team_registrations.interested.count %><br>
                      สมัครแล้ว: <%= t.team_registrations.applied.count %><br>
                      ยืนยัน/จ่ายแล้ว: <%= t.team_registrations.confirmed.count + t.team_registrations.paid.count %>
                    </td>
                    <td class="small">
                      <%= (t.updated_at || t.created_at).strftime("%Y-%m-%d %H:%M") %>
                    </td>
                    <td class="text-end">
                      <% if can_edit_tournament?(t) %>
                        <%= link_to "แก้ไข", edit_tournament_path(t), class: "btn btn-sm btn-outline-primary mb-1" %>
                      <% end %>
                      <% if admin? %>
                        <% if t.pending? %>
                          <%= button_to "อนุมัติ",
                                        approve_tournament_path(t, status: :active),
                                        method: :patch,
                                        class: "btn btn-sm btn-success mb-1",
                                        form_class: "inline-form" %>
                        <% else %>
                          <%= button_to "ตั้งเป็นรออนุมัติ",
                                        approve_tournament_path(t, status: :pending),
                                        method: :patch,
                                        class: "btn btn-sm btn-outline-secondary mb-1",
                                        form_class: "inline-form" %>
                        <% end %>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    <% else %>
      <div class="alert alert-info" role="alert">ตอนนี้ยังไม่มีรายการแข่งในแดชบอร์ดของคุณ</div>
    <% end %>
  </div>
</div>
