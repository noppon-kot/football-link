<div class="app-shell">
  <% bg_image = "banner2.png" %>
  <div class="tournament-show-header">
    <div style="position:absolute;inset:0;background-image:url('<%= asset_path(bg_image) %>');background-size:cover;background-position:center;filter:brightness(0.8);"></div>
    <div style="position:relative;">
      <div class="tournament-show-title"><%= @tournament.title %></div>
      <div class="tournament-show-subtitle">
        7 - 8 ก.พ. 2026 · <%= @tournament.location_name %>
      </div>
    </div>
  </div>

  <div class="tournament-show-body">
    <div class="container py-2">
      <%= render "tournaments/nav_tabs", active: :teams %>

      <h2 style="font-size:18px;font-weight:bold;" class="mb-2">ทีมที่สนใจ / สมัคร</h2>
      <p class="text-muted" style="font-size:13px;">รายการ: <%= @tournament.title %></p>
      <hr>

      <div class="team-list-card card shadow-sm">
        <div class="team-list-header d-flex justify-content-between align-items-center">
          <span>ทีมที่สนใจ / สมัคร</span>
          <% if can_manage_registrations?(@tournament) %>
            <%= link_to new_tournament_team_registration_path(@tournament), class: "btn btn-sm btn-outline-secondary d-flex align-items-center" do %>
              <span style="font-weight:bold;margin-right:4px;">+</span>
              <span>เพิ่มทีมใหม่</span>
            <% end %>
          <% end %>
        </div>
        <% divisions = @tournament.tournament_divisions.order(:position, :id).to_a %>
        <% regs_without_div = @tournament.team_registrations.where(tournament_division_id: nil).includes(:team).to_a %>
        <% status_order = { "confirmed" => 0, "paid" => 0, "applied" => 1, "interested" => 1 } %>

        <% if divisions.any? || @tournament.team_registrations.any? %>
          <% color_classes = ["border-primary", "border-success", "border-warning", "border-info", "border-danger"] %>

          <% divisions.each_with_index do |div, idx| %>
            <% regs = div.team_registrations.includes(:team).to_a %>
            <% sorted_regs = regs.sort_by { |reg| [status_order[reg.status] || 1, reg.created_at] } %>
            <% color_class = color_classes[idx % color_classes.size] %>
            <% locked_for_div = div.groups.exists? || div.matches.exists? %>

            <div class="mb-3 p-2 p-md-3 rounded" style="background-color:#f8f9fa;">
              <div class="d-flex align-items-center mb-2" style="gap:8px;">
                <div class="border-start border-4 <%= color_class %>" style="height:20px;"></div>
                <div>
                  <div class="fw-bold" style="font-size:13px;">รุ่น <%= div.name %></div>
                  <div style="font-size:11px;color:#78909c;">จำนวนทีมในรุ่นนี้ <%= regs.count %> ทีม</div>
                </div>
              </div>

              <% if sorted_regs.any? %>
                <% sorted_regs.each do |reg| %>
                  <% team = reg.team %>
                  <% display_state = case reg.status
                                     when "confirmed", "paid" then :confirmed
                                     else :applied
                                     end %>

                  <% badge_class = case display_state
                                   when :applied   then "team-status-badge team-status-badge--applied"
                                   when :confirmed then "team-status-badge team-status-badge--confirmed"
                                   end %>

                  <% label = display_state == :applied ? "สมัครแล้ว" : "ยืนยันแล้ว" %>
                  <div class="team-list-row">
                    <div class="d-flex align-items-center" style="gap:8px;">
                      <% if team.logo.attached? %>
                        <%= image_tag team.logo,
                                      class: "rounded-circle",
                                      style: "width:32px;height:32px;object-fit:cover;" %>
                      <% end %>
                      <div>
                        <div><strong><%= team.name %></strong></div>
                        <div style="font-size:11px;color:#78909c;">ผู้จัดการทีม: <%= team.contact_name %></div>
                      </div>
                    </div>
                    <div style="display:flex;align-items:center;gap:6px;">
                      <% if can_manage_registrations?(@tournament) %>
                        <% target_status = (display_state == :confirmed ? "applied" : "confirmed") %>
                        <%= button_to label,
                              tournament_team_registration_path(@tournament, reg),
                              method: :patch,
                              params: { team_registration: { status: target_status } },
                              class: "team-status-badge #{badge_class}",
                              form_class: "inline-form" %>
                        <%= link_to "แก้ไขทีม",
                              edit_team_tournament_team_registration_path(@tournament, reg),
                              class: "btn btn-sm btn-outline-secondary" %>
                        <% unless locked_for_div %>
                          <%= button_to "ลบ",
                                tournament_team_registration_path(@tournament, reg),
                                method: :delete,
                                data: { turbo_confirm: "ลบทีมนี้ออกจากรายการแข่ง?" },
                                class: "btn-pill btn-secondary",
                                form_class: "inline-form" %>
                        <% end %>
                      <% else %>
                        <div class="<%= badge_class %>"><%= label %></div>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              <% else %>
                <div class="team-list-row">ยังไม่มีทีมที่สนใจหรือสมัครในรุ่นนี้</div>
              <% end %>
            </div>
          <% end %>

          <% if regs_without_div.any? %>
            <div class="mt-3 p-2 p-md-3 rounded" style="background-color:#f8f9fa;">
              <div class="d-flex align-items-center mb-2" style="gap:8px;">
                <div class="border-start border-4 border-secondary" style="height:20px;"></div>
                <div>
                  <div class="fw-bold" style="font-size:13px;">ไม่ระบุรุ่น</div>
                  <div style="font-size:11px;color:#78909c;">จำนวนทีมที่ยังไม่ได้เลือกรุ่น <%= regs_without_div.count %> ทีม</div>
                </div>
              </div>
              <% sorted_regs = regs_without_div.sort_by { |reg| [status_order[reg.status] || 1, reg.created_at] } %>
              <% sorted_regs.each do |reg| %>
                <% team = reg.team %>
                <% display_state = case reg.status
                                   when "confirmed", "paid" then :confirmed
                                   else :applied
                                   end %>

                <% badge_class = case display_state
                                 when :applied   then "team-status-badge team-status-badge--applied"
                                 when :confirmed then "team-status-badge team-status-badge--confirmed"
                                 end %>

                <% label = display_state == :applied ? "สมัครแล้ว" : "ยืนยันแล้ว" %>
                <div class="team-list-row">
                  <div class="d-flex align-items-center" style="gap:8px;">
                    <% if team.logo.attached? %>
                      <%= image_tag team.logo,
                                    class: "rounded-circle",
                                    style: "width:32px;height:32px;object-fit:cover;" %>
                    <% end %>
                    <div>
                      <div><strong><%= team.name %></strong></div>
                      <div style="font-size:11px;color:#78909c;">ผู้จัดการทีม: <%= team.contact_name %></div>
                    </div>
                  </div>
                  <div style="display:flex;align-items:center;gap:6px;">
                    <% if can_manage_registrations?(@tournament) %>
                      <% target_status = (display_state == :confirmed ? "applied" : "confirmed") %>
                      <%= button_to label,
                            tournament_team_registration_path(@tournament, reg),
                            method: :patch,
                            params: { team_registration: { status: target_status } },
                            class: "team-status-badge #{badge_class}",
                            form_class: "inline-form" %>
                      <%= link_to "แก้ไขทีม",
                            edit_team_tournament_team_registration_path(@tournament, reg),
                            class: "btn btn-sm btn-outline-secondary" %>
                      <%# สำหรับทีมที่ไม่ระบุรุ่น จะไม่มี lock ที่ระดับ division จึงลบได้เสมอ %>
                      <%= button_to "ลบ",
                            tournament_team_registration_path(@tournament, reg),
                            method: :delete,
                            data: { turbo_confirm: "ลบทีมนี้ออกจากรายการแข่ง?" },
                            class: "btn btn-sm btn-outline-danger",
                            form_class: "inline-form" %>
                    <% else %>
                      <div class="<%= badge_class %>"><%= label %></div>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        <% else %>
          <div class="team-list-row">ยังไม่มีทีมที่สนใจหรือสมัคร</div>
        <% end %>
      </div>
    </div>
  </div>
</div>
