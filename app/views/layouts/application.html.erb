<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Ball Dernsai" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <link rel="manifest" href="/manifest.json">
    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <!-- Bootstrap 5 CSS via CDN -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous">

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <!-- Bootstrap 5 JS bundle (for navbar toggle) -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"></script>
  </head>

  <body>
    <div style="max-width:960px;margin:0 auto;">
      <nav class="navbar navbar-expand-md navbar-light" style="background:#eceff1;border-bottom:1px solid #cfd8dc;position:sticky;top:0;z-index:1030;">
        <div class="container-fluid" style="padding:4px 12px;display:flex;align-items:center;">
          <%= link_to root_path, class: "navbar-brand me-2", style: "font-size:13px;color:#1565c0;font-weight:bold;display:flex;align-items:center;gap:4px;" do %>
            <%= image_tag "logo.png", size: "32x42", alt: "Ball Dernsai Match", style: "border-radius:4px;" %>
            <span>Ball Dernsai Match</span>
          <% end %>

          <button class="navbar-toggler ms-auto" type="button" data-bs-toggle="collapse" data-bs-target="#topNav" aria-controls="topNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse ms-2" id="topNav">
            <ul class="navbar-nav me-2 mb-2 mb-md-0" style="font-size:12px;">
              <% if can_create_tournaments? %>
                <li class="nav-item">
                  <%= link_to "รายการของฉัน", mytournaments_path, class: "nav-link" %>
                </li>
              <% end %>

              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="moreMenu" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                  เพิ่มเติม
                </a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="moreMenu" style="font-size:12px;">
                  <li>
                    <a class="dropdown-item" href="#">วิธีใช้งาน</a>
                  </li>
                  <!-- เพิ่มเมนูอื่น ๆ ได้ในอนาคต -->
                </ul>
              </li>
            </ul>

            <ul class="navbar-nav ms-auto mb-2 mb-md-0 flex-row" style="font-size:12px;align-items:center;gap:4px;">
              <% if current_user %>
                <li class="nav-item">
                  <span class="nav-link" style="color:#455a64;font-weight:bold;padding-right:4px;"> <%= current_user.name %> </span>
                </li>
                <li class="nav-item">
                  <%= button_to "ออกจากระบบ", logout_path,
                        method: :delete,
                        form: { style: "margin:0;display:inline;" },
                        class: "btn btn-sm",
                        params: {},
                        style: "background:#e3f2fd;color:#1565c0;border-color:#90caf9;" %>
                </li>
              <% else %>
                <li class="nav-item">
                  <%= link_to "เข้าสู่ระบบ", login_path, class: "btn btn-sm btn-outline-primary" %>
                </li>
                <li class="nav-item">
                  <%= link_to "เข้าสู่ระบบด้วย LINE", line_login_path, class: "btn btn-sm btn-success" %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>

      <% if flash.present? %>
        <div id="flash-toast-container" style="position:fixed;left:50%;transform:translateX(-50%);bottom:72px;max-width:90%;z-index:1100;pointer-events:none;">
          <% flash.each do |key, message| %>
            <% next if message.blank? %>
            <% bs_class = key.to_s == "notice" ? "alert-success" : "alert-danger" %>
            <div class="alert <%= bs_class %> py-2 px-3 mb-2 js-flash-auto-hide" role="alert" style="font-size:13px;pointer-events:auto;box-shadow:0 2px 6px rgba(0,0,0,0.25);">
              <%= message %>
            </div>
          <% end %>
        </div>
      <% end %>

      <%= yield %>

      <!-- Back to top button -->
      <button
        id="back-to-top-btn"
        type="button"
        style="position:fixed;right:16px;bottom:16px;width:40px;height:40px;border-radius:50%;border:none;background:#1976d2;color:#ffffff;display:none;align-items:center;justify-content:center;box-shadow:0 2px 6px rgba(0,0,0,0.3);z-index:1050;font-size:18px;"
        aria-label="กลับขึ้นด้านบน">
        ↑
      </button>

      <script>
        (function() {
          var btn = document.getElementById('back-to-top-btn');
          if (btn) {
            window.addEventListener('scroll', function() {
              if (window.scrollY > 200) {
                btn.style.display = 'flex';
              } else {
                btn.style.display = 'none';
              }
            });

            btn.addEventListener('click', function() {
              window.scrollTo({ top: 0, behavior: 'smooth' });
            });
          }

          // auto hide flash messages after a short delay
          var flashes = document.querySelectorAll('.js-flash-auto-hide');
          flashes.forEach(function(el) {
            setTimeout(function() {
              el.style.transition = 'opacity 0.3s ease';
              el.style.opacity = '0';
              setTimeout(function() {
                if (el && el.parentNode) {
                  el.parentNode.removeChild(el);
                }
              }, 350);
            }, 3000);
          });
        })();
      </script>
    </div>
  </body>
</html>
